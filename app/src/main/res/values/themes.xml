<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Market" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Market.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Market.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Market.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TitleTextView">
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">sans-serif-black</item>
        <item name="android:textSize">@dimen/text_size_title</item>
        <item name="android:maxLines">2</item>
    </style>

    <style name="PriceTextView" parent="TitleTextView">
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:textSize">@dimen/text_size_price</item>
    </style>

    <style name="BadgeTextView">
        <item name="android:text">1</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_badge</item>
    </style>

    <style name="Button">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
    </style>

    <style name="Button.Left" parent="Button">
        <item name="android:src">@drawable/ic_remove</item>
        <item name="android:background">@drawable/selector_remove_image_button</item>
    </style>

    <style name="Button.Right" parent="Button">
        <item name="android:src">@drawable/ic_add</item>
        <item name="android:background">@drawable/selector_add_image_button</item>
    </style>
</resources>
